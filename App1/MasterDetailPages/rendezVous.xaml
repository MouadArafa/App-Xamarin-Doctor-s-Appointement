<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MasterDetailPages.rendezVous">
    <ContentPage.Content>
        <StackLayout>
            <Image WidthRequest="200" HeightRequest="150" x:Name="myImage" HorizontalOptions="Center" VerticalOptions="StartAndExpand" />
            <Label  Text="Choisissez une Date :" TextColor="Black" HorizontalOptions="Center" VerticalOptions="StartAndExpand" Padding="0,50,0,0" FontFamily="Arial" FontAttributes="Bold" FontSize="Large"/>
            <DatePicker x:Name="OurDate" DateSelected="DatePicker_DateSelected" />
            <Label  TextColor="Black" FontFamily="Arial" FontAttributes="Bold" FontSize="Large" x:Name="label" HorizontalOptions="Center" VerticalOptions="StartAndExpand" Padding="0,50,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>